        # Make sure train_data is sorted by date
        if isinstance(train_data.index, pd.DatetimeIndex):
            train_data = train_data.sort_index()
        
        # Get ARIMA parameters - note that arima_forecast doesn't accept a freq parameter
        if seasonal:
